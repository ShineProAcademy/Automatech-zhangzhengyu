<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Automatech.AvaloniaApp.Views.TabView">
    <TabControl>
        <TabItem Header="Border">
           <Border Width="300" Height="300" Background="{DynamicResource ThemeAccentBrush}"
                VerticalAlignment="Center" HorizontalAlignment="Center" BoxShadow="5 5 10 0 DarkGray">
               <TextBlock Text="阴影效果" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
           </Border>
        </TabItem>
        <TabItem Header="Canvas">
           <Canvas>
               <Border Canvas.Left="100" Canvas.Top="100" ZIndex="1" Width="200" Height="200" Background="Yellow"></Border>
               <Border Canvas.Left="100" Canvas.Top="100" ZIndex="0" Width="200" Height="200" Background="Green"></Border>
           </Canvas>
        </TabItem>
        <TabItem Header="功能3">
            <TextBlock Text="功能3"></TextBlock>
        </TabItem>
        <TabItem Header="功能4">
            <TextBlock Text="功能4"></TextBlock>
        </TabItem>
    </TabControl>
</UserControl>
