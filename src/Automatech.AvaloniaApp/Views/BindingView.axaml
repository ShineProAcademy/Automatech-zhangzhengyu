<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Automatech.AvaloniaApp.Views.BindningView">
   <TabControl>
       <TabItem Header="ProgressBar">
           <Grid VerticalAlignment="Center" HorizontalAlignment="Center" RowDefinitions="Auto Auto">
              <StackPanel Spacing="10">
                  <TextBlock Text="{Binding ElementName=slider,Path=Value,StringFormat={}{0:0.000}}"/>
                  <ProgressBar Width="200" Minimum="0" Maximum="100" Value="{Binding #slider.Value}"/>
                  <Slider x:Name="slider" Width="200" Minimum="0" Maximum="100"/>
              </StackPanel>
           </Grid>
       </TabItem>
   </TabControl>
</UserControl>
