<UserControl x:Class="Automatech.Views.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:control="clr-namespace:Automatech.Controls;assembly=Automatech.Controls"
             xmlns:local="clr-namespace:Automatech.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <control:StatusControl Name="state" Status="Idle" Height="50" Width="50" Brush="Yellow" Text="状态灯">
            <control:StatusControl.Items>
                <control:StatusItem Status="Idle" Brush="Yellow" Text="空闲"/>
                <control:StatusItem Status="Running" Brush="Green" Text="运行"/>
                <control:StatusItem Status="Estoped" Brush="Red" Text="紧停"/>
            </control:StatusControl.Items>
        </control:StatusControl>
    </Grid>
</UserControl>
